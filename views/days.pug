extends base.pug

block content
  .mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet.mdl-grid.mdl-grid--no-spacing
    .mdl-card.mdl-shadow--2dp.mdl-cell.mdl-cell--4-col.mdl-cell--4-col-tablet.mdl-cell--12-col-desktop
      .mdl-card__title.mdl-card--expand.mdl-color--teal-300
        h2.mdl-card__title-text Days
      .mdl-card__supporting-text.mdl-color-text--grey-600
        ul.demo-list-three.mdl-list
          each day in days
            li.mdl-list__item.mdl-list__item--three-line
              span.mdl-list__item-primary-content
                i.material-icons.mdl-list__item-avatar schedule
                span= day.type
                span.mdl-list__item-text-body= day.date
                //- prettyDate(day.date)
              span.mdl-list__item-secondary-content
                a.mdl-list__item-secondary-action(href='/admin/day?date=' + isoDate(day.date))
                  button.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--accent
                    i.material-icons edit
    .demo-separator.mdl-cell--1-col

block header
  span.mdl-layout-title= "Days"
